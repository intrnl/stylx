{
	"compilerOptions": {
		"target": "ESNext",
		"skipLibCheck": true,
		"outDir": "dist/",

		"module": "Node16",
		"moduleResolution": "Node16",
		"resolveJsonModule": true,

		"declaration": true,
		"incremental": true,
		"strict": true,

		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"verbatimModuleSyntax": true,
	},
	"include": ["src"]
}
